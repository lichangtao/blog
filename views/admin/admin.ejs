		<script type="text/javascript">
			jQuery(function($) {
			
				window.prettyPrint && prettyPrint();
				$('#id-check-horizontal').removeAttr('checked').on('click', function(){
					$('#dt-list-1').toggleClass('dl-horizontal').prev().html(this.checked ? '&lt;dl class="dl-horizontal"&gt;' : '&lt;dl&gt;');
				});
			
			})
			$('.mingwen').click(function(){
				$('.password').attr('type','text');
				$('.mingwen').addClass('hide');
				$('.jiami').removeClass('hide');
			});
			$('.jiami').click(function(){
				$('.password').attr('type','password');
				$('.jiami').addClass('hide');
				$('.mingwen').removeClass('hide');
			});
			$('.xiugai').click(function(){
				$('.value').attr('contentEditable','true').css({ 'border': '1px solid #6FB3E0' });
				$('.xiugai').hide().siblings().show();
				$('input').removeAttr('disabled');
				$('.upfile').show();
			});
			var $nickname = $('.nickname').val();
            var $tel = $('.tel').val();
            var $email = $('.email').val();
            var $user = $('.user').val();
            var $password = $('.password').val();
			$('.quxiao').click(function(){
                $('.nickname').val($nickname);
                $('.tel').val($tel);
                $('.email').val($email);
                $('.user').val($user);
                $('.password').val($password);
				$('.xiugai').show().siblings().hide();
				$('input').attr('disabled',true);
                $('.password').attr('type','password');
                $('.jiami').addClass('hide');
                $('.mingwen').removeClass('hide');
                $('.upfile').hide();
			});
            var fileBtn = $("input[type=file]");
                 fileBtn.on("change", function(){
					 var index = $(this).val().lastIndexOf("\\");
					 var sFileName = $(this).val().substr((index+1));
					 $("#rightText").html(sFileName);
            });
			$('.queding').click(function () {
                var formData = new FormData($( "#uploadForm" )[0]);
                $.ajax({
                    url: '/admin/updateuData' ,
                    type: 'post',
                    data: formData,
                    async: true,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        if(data.result){
                            layer.msg('修改成功',{
                                icon: 1, //1，绿勾  2，红叉  3，黄问号  4，灰色锁头  5，红色委屈脸  6，绿色笑脸 7，黄色感叹号
                                time:1000
                            });
                            setTimeout(function () {
                                window.location.reload();//刷新当前页面
                            },1500);
						}
                    },
                    error: function (data) {
                        console.log('err:'+data);
                    }
                });
            })
            function logout(){
                $.cookie("login", "false", { expires: -1 });        // 删除 cookie
                window.location.href = '/';
            }
		</script>
