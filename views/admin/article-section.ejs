		<script type="text/javascript">
			jQuery(function($) {
			
				window.prettyPrint && prettyPrint();
				$('#id-check-horizontal').removeAttr('checked').on('click', function(){
					$('#dt-list-1').toggleClass('dl-horizontal').prev().html(this.checked ? '&lt;dl class="dl-horizontal"&gt;' : '&lt;dl&gt;');
				});
			
			})
            var fileBtn = $("input[type=file]");
                 fileBtn.on("change", function(){
					 var index = $(this).val().lastIndexOf("\\");
					 var sFileName = $(this).val().substr((index+1));
					 $("#rightText").html(sFileName);
            });
            function logout(){
                $.cookie("login", "false", { expires: -1 });        // 删除 cookie
                window.location.href = '/';
            }
            layui.use('form', function(){
                var form = layui.form();
            });
            $('.submit').click(function () {
                if($('.ti1').val().length == 0){
                    layer.msg('请填写标题',{
                        icon: 7, //1，绿勾  2，红叉  3，黄问号  4，灰色锁头  5，红色委屈脸  6，绿色笑脸 7，黄色感叹号
                        time:1000
                    });
                    return;
                }
                $.ajax({
                    url : '/admin/menu',
                    type : 'post',
                    dataType : 'json',
                    data : {
                        title : $('.ti1').val()
                    },
                    success(data){
                        if(data.err){
                            layer.msg('提交失败',{
                                icon: 2, //1，绿勾  2，红叉  3，黄问号  4，灰色锁头  5，红色委屈脸  6，绿色笑脸 7，黄色感叹号
                                time:1000
                            });
                            return;
                        }
                        if(data.succ){
                            layer.msg('提交成功',{
                                icon: 1, //1，绿勾  2，红叉  3，黄问号  4，灰色锁头  5，红色委屈脸  6，绿色笑脸 7，黄色感叹号
                                time:1000
                            });
                            setTimeout(function () {

                                window.location.reload();
                            },1000)
                        }
                    },
                    error(data){}
                })
            });
            function chk() {
                layer.msg('请填写内容！',{
                    icon: 7, //1，绿勾  2，红叉  3，黄问号  4，灰色锁头  5，红色委屈脸  6，绿色笑脸 7，黄色感叹号
                    time:1000
                });
            }
            $('.sbtn').click(function () {
                if($('.stitle').val().length == 0 || $('.sabs').val().length == 0 ){
                    chk();
                    return;
                }
                var formData2 = new FormData($( "#uploadForm2" )[0]);
                $.ajax({
                    url : '/admin/smenu',
                    type : 'post',
                    data: formData2,
                    async: true,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success(data){
                        if(data.err){
                            layer.msg('提交失败',{
                                icon: 2, //1，绿勾  2，红叉  3，黄问号  4，灰色锁头  5，红色委屈脸  6，绿色笑脸 7，黄色感叹号
                                time:1000
                            });
                            return;
                        }
                        if(data.succ){
                            layer.msg('提交成功',{
                                icon: 1, //1，绿勾  2，红叉  3，黄问号  4，灰色锁头  5，红色委屈脸  6，绿色笑脸 7，黄色感叹号
                                time:1000
                            });
                            setTimeout(function () {

                                window.location.reload();
                            },1000)
                        }
                    },
                    error(data){}
                })
            });
