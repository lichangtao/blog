                    <% for(var i in data){ %>
                    <div class="article">

                        <!-- 标题 -->
                        <div class="title">
                            <span><img src="images/art.png" width="20"/></span>
                            <a href="/article/<%= data[i]['id']%>.html" class="title-con" target="_blank"> <%= data[i]['title']%> </a>
                        </div>
                        <!-- 封面 -->
                        <div class="covers">
                            <% if(  data[i]['img']  ){ %>
                                <a href="/article/<%= data[i]['id']%>.html" target="_blank"><img src="<%= data[i]['img'] %>" class="img-responsive" /></a>
                            <% } %>
                        </div>

                        <!-- 概要 (可显示260-280个字符 5行)-->
                        <% if(  data[i]['abstract']  ){ %>
                        <div class="outline">
                            摘要：<span class="outline-con"> <%= data[i]['abstract'] %> </span>
                        </div>
                        <% } %>

                        <!-- 信息及标签 -->
                        <div class="msg">
                            <!-- 作者 -->
                            <% if(data[i]['author']){%>
                                <img src="/images/avatar/author.png" width="15" /><span class="au"><a href="/usermessage/<%= data[i]['uid']%>.html"> <%= data[i]['author'] %> </a></span>
                            <% }else if(data[i]['nickname']){%>
                                <img src="/images/avatar/author.png" width="15" /><span class="au"><a href="/usermessage/<%= data[i]['uid']%>.html"> <%= data[i]['nickname'] %> </a></span>
